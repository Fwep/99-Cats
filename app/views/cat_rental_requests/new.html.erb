<% cats = @cats %>
<h2>Rent a Cat</h2>

<form action="<%= cat_rental_requests_url %>" method="POST">
  <select name="rental_request[cat_id]">
    <option disabled selected>Choose a cat</option>
    <% cats.each do |cat| %>
    <% selected = @rental_request.cat_id == cat.id %>
      <option 
      value="<%=cat.id%>"
      <%= selected ? "selected" : "" %>
      >
        <%= cat.name %>
      </option>
    <% end %>
  </select>

  <br>
  <br>
  <label for="start-date">Start date:</label>
  <input id="start-date" type="date" name="rental_request[start_date]">

  <br>
  <br>
  <label for="end-date">End date:</label>
  <input id="end-date" type="date" name="rental_request[end_date]">

  <br>
  <input type="submit" value="Submit Rental Request">
</form>