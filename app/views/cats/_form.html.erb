<% action_url = cat.persisted? ? cat_url(cat) : cats_url %>

<h2>Edit A Cat!<h2>
<form action="<%= action_url %>" method="POST">
  <% if cat.persisted? %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label for="name">Name</label>
  <input id="name" type="text" name="cat[name]" value="<%= cat.name %>">
  
  <label for="male">Male</label>
  <input id="male" type="radio" name="cat[sex]" value="M" <%= (cat.sex == "M") ? "checked" : "" %> >
  <label for="male">Female</label>
  <input id="male" type="radio" name="cat[sex]" value="F" <%= (cat.sex == "F") ? "checked" : "" %> >
  
  <br>
  <br>
  <label for="color">Color</label>
  <select id="color" name="cat[color]">
    <option selected disabled>-- Select a color --</option>
    <% Cat::COLORS.each do |color| %>
      <option value="<%=color%>" <%= (cat.color == color) ? "selected" : "" %>><%= color %></option>
    <% end %>
  </select>

  <label for="bday">Birthday:</label>
  <input id="bday" type="date" name="cat[birth_date]" value="<%= cat.birth_date %>">

  <br>
  <br>
  <label for="desc">Description</label>
  <textarea id="desc" name="cat[description]" rows="5" cols="33" style="resize:none"><%= cat.description %></textarea>

  <br>
  <% submit_text = cat.persisted? ? "Create Cat!" : "Update Cat!"  %>
  <input type="submit" value="<%=submit_text%>">
</form>