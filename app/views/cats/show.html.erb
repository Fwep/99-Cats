<% cat = @cat %>
<% rentals = @rentals %>

<h2 style="text-align: center"><%= cat.name %></h2>
  <table>
    <tr>
      <th>Attribute</th>
      <th>Value</th>
    </tr>

    <tr>
      <td>Age</td>
      <td><%= cat.age %></td>
    </tr>

    <tr>
      <td>Birth Date</td>
      <td><%= cat.birth_date %></td>
    </tr>

    <tr>
      <td>Color</td>
      <td><%= cat.color %></td>
    </tr>

    <tr>
      <td>Sex</td>
      <td><%= cat.sex %></td>
    </tr>
  </table>

  <h3>Rentals</h3>
  <table>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>Status</th>
    </tr>
    <% rentals.each do |rental| %>
      <tr>
        <td><%= rental.start_date  %></td>
        <td><%= rental.end_date  %></td>
        <td>
          <% if rental.pending? %>
            <%= button_to 'Approve Request', approve_cat_rental_request_url(rental), method: :post %>
            <%= button_to 'Deny Request', deny_cat_rental_request_url(rental), method: :post %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>